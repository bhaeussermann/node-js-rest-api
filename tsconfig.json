{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
